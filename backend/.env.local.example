# DreamOps Local Development Environment
# Copy this to .env.local and update with your Neon connection string

# Database (Neon)
DATABASE_URL=postgresql://username:password@ep-cool-darkness-123456.us-east-2.aws.neon.tech/oncall_agent?sslmode=require

# Core Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022
LOG_LEVEL=DEBUG
ENVIRONMENT=local

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# PagerDuty Integration
PAGERDUTY_ENABLED=true
PAGERDUTY_WEBHOOK_SECRET=test-secret-for-local
PAGERDUTY_API_KEY=optional-for-local
PAGERDUTY_ROUTING_KEY=optional-for-local

# Kubernetes Integration
K8S_ENABLED=false  # Set to true if you have local k8s
K8S_CONFIG_PATH=~/.kube/config
K8S_CONTEXT=docker-desktop
K8S_NAMESPACE=default
K8S_ENABLE_DESTRUCTIVE_OPERATIONS=false

# GitHub Integration (optional)
# GITHUB_TOKEN=ghp_your_github_token
# GITHUB_MCP_SERVER_PATH=../../github-mcp-server/github-mcp-server
# GITHUB_MCP_SERVER_HOST=localhost
# GITHUB_MCP_SERVER_PORT=8081

# Grafana Integration (optional)
# GRAFANA_URL=http://localhost:3000
# GRAFANA_API_KEY=your-grafana-api-key

# Notion Integration (optional)
# NOTION_TOKEN=your-notion-token
# NOTION_DATABASE_ID=your-database-id
# NOTION_VERSION=2022-06-28

# MCP Settings
MCP_MAX_RETRIES=3
MCP_TIMEOUT_SECONDS=30