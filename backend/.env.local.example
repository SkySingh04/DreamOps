## .env.local (Development)
# Environment
NODE_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Anthropic/Claude Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-dev-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://oncall_user:changeme@localhost:5432/oncall_agent_dev
POSTGRES_URL=postgresql://oncall_user:changeme@localhost:5432/oncall_agent_dev

# Redis Configuration (Local)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Agent Configuration
AGENT_NAME=oncall-agent-dev
MCP_TIMEOUT=30
MCP_RETRY_ATTEMPTS=3
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1.0

# Alert Handling Settings
ALERT_AUTO_ACKNOWLEDGE=true
ALERT_PRIORITY_THRESHOLD=low

# Kubernetes Configuration (Disabled for local)
K8S_ENABLED=false
K8S_CONFIG_PATH=./local-kubeconfig.yaml
K8S_CONTEXT=local-context
K8S_NAMESPACE=default
K8S_MCP_SERVER_URL=http://localhost:8080
K8S_ENABLE_DESTRUCTIVE_OPERATIONS=false
K8S_USE_MCP_SERVER=false

# GitHub MCP Integration
GITHUB_TOKEN=ghp_your-dev-token-here
GITHUB_MCP_SERVER_PATH=./github-mcp-server/github-mcp-server-arm
GITHUB_MCP_HOST=localhost
GITHUB_MCP_PORT=8081

# Notion Integration (Dev workspace)
NOTION_TOKEN=ntn_dev-token-here
NOTION_VERSION=2022-06-28
NOTION_DATABASE_ID=dev-database-id

# PagerDuty Integration (Disabled for local)
PAGERDUTY_ENABLED=false
PAGERDUTY_WEBHOOK_SECRET=dev-webhook-secret
PAGERDUTY_API_KEY=dev-api-key
PAGERDUTY_USER_EMAIL=dev@yourcompany.com

# API Server Configuration
API_HOST=localhost
API_PORT=8000
API_RELOAD=true
API_WORKERS=1
API_LOG_LEVEL=debug

# Webhook Security Settings
WEBHOOK_RATE_LIMIT=1000
WEBHOOK_ALLOWED_IPS=127.0.0.1,::1

# JWT Authentication
AUTH_SECRET=dev-secret-key-at-least-32-characters-long-for-local-development

# Firebase Configuration (Dev project)
FIREBASE_PROJECT_ID=your-dev-project
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./firebase-dev-service-account-key.json

# AWS Configuration
AWS_PROFILE=default
AWS_DEFAULT_REGION=us-east-1