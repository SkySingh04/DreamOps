# Core Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
ENVIRONMENT=development

# Agent Configuration
AGENT_NAME=oncall-agent
LOG_LEVEL=INFO

# PhonePe Payment Gateway Configuration
# For SDK: client_id = PHONEPE_MERCHANT_ID, client_secret = PHONEPE_SALT_KEY
PHONEPE_MERCHANT_ID=your_phonepe_client_id  # Get from PhonePe business dashboard
PHONEPE_SALT_KEY=your_phonepe_client_secret  # Get from PhonePe business dashboard
PHONEPE_SALT_INDEX=1
PHONEPE_BASE_URL=https://api-preprod.phonepe.com/apis/pg-sandbox  # Use production URL for live
PHONEPE_REDIRECT_URL=http://localhost:3000/payment/redirect
PHONEPE_CALLBACK_URL=http://localhost:8000/api/v1/payments/callback

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1
API_LOG_LEVEL=info

# MCP Integration Settings
MCP_TIMEOUT=30
MCP_RETRY_ATTEMPTS=3
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1.0

# Kubernetes Configuration (Optional)
K8S_ENABLED=false
K8S_CONFIG_PATH=~/.kube/config
K8S_CONTEXT=default
K8S_NAMESPACE=default

# PagerDuty Integration (Optional)
PAGERDUTY_ENABLED=false
# PAGERDUTY_WEBHOOK_SECRET=your_webhook_secret
# PAGERDUTY_API_KEY=your_api_key
# PAGERDUTY_EVENTS_INTEGRATION_KEY=your_events_v2_integration_key  # From PagerDuty service integration

# Database Configuration (Optional)
# DATABASE_URL=postgresql://user:password@localhost/dbname
# POSTGRES_URL=postgresql://user:password@localhost/dbname

# AWS Configuration (Optional)
# AWS_PROFILE=default
# AWS_DEFAULT_REGION=us-east-1

# Grafana Integration (Optional)
# GRAFANA_URL=https://your-grafana-instance.com
# GRAFANA_API_KEY=glsa_your_grafana_api_key_here

# Firebase Configuration (Required for authentication)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./firebase-service-account-key.json
# Frontend Firebase config (NEXT_PUBLIC_ prefix needed for Next.js)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id