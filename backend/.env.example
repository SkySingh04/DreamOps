# Anthropic/Claude Configuration
ANTHROPIC_API_KEY=your-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Agent Configuration
AGENT_NAME=oncall-agent
LOG_LEVEL=INFO

# MCP Integration Settings
MCP_TIMEOUT=30
MCP_RETRY_ATTEMPTS=3
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1.0

# Alert Handling Settings
ALERT_AUTO_ACKNOWLEDGE=false
ALERT_PRIORITY_THRESHOLD=high

# Kubernetes Configuration
K8S_ENABLED=true
K8S_CONFIG_PATH=~/.kube/config
# For local testing with kind/minikube:
K8S_CONTEXT=kind-oncall-test
# For EKS testing (update with your cluster ARN):
# K8S_CONTEXT=arn:aws:eks:us-east-1:123456789012:cluster/oncall-agent-eks
K8S_NAMESPACE=default
# For EKS test apps:
# K8S_NAMESPACE=test-apps
K8S_MCP_SERVER_URL=http://localhost:8080
K8S_ENABLE_DESTRUCTIVE_OPERATIONS=false

# K8s MCP Server Configuration
K8S_USE_MCP_SERVER=false
K8S_MCP_SERVER_PATH=kubernetes-mcp-server
K8S_MCP_SERVER_HOST=localhost
K8S_MCP_SERVER_PORT=8085

