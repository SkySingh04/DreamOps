## .env.production

# Environment
NODE_ENV=production
DEBUG=false
LOG_LEVEL=WARN

# Anthropic/Claude Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-production-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Database Configuration (Production - use environment variables for security)
DATABASE_URL=${PRODUCTION_DATABASE_URL}
POSTGRES_URL=${PRODUCTION_DATABASE_URL}

# Redis Configuration (Production)
REDIS_URL=${PRODUCTION_REDIS_URL}
REDIS_HOST=${PRODUCTION_REDIS_HOST}
REDIS_PORT=6379

# Agent Configuration
AGENT_NAME=oncall-agent-prod
MCP_TIMEOUT=30
MCP_RETRY_ATTEMPTS=3
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1.0

# Alert Handling Settings
ALERT_AUTO_ACKNOWLEDGE=false
ALERT_PRIORITY_THRESHOLD=high

# Kubernetes Configuration
K8S_ENABLED=true
K8S_CONFIG_PATH=/app/config/kubeconfig-production.yaml
K8S_CONTEXT=arn:aws:eks:ap-south-1:500489831186:cluster/oncall-agent-eks
K8S_NAMESPACE=production
K8S_MCP_SERVER_URL=http://k8s-mcp-service:8080
K8S_ENABLE_DESTRUCTIVE_OPERATIONS=false
K8S_USE_MCP_SERVER=true

# GitHub MCP Integration
GITHUB_TOKEN=${GITHUB_PRODUCTION_TOKEN}
GITHUB_MCP_SERVER_PATH=/app/github-mcp-server/github-mcp-server
GITHUB_MCP_HOST=localhost
GITHUB_MCP_PORT=8081

# Notion Integration
NOTION_TOKEN=${NOTION_PRODUCTION_TOKEN}
NOTION_VERSION=2022-06-28
NOTION_DATABASE_ID=${NOTION_PRODUCTION_DATABASE_ID}

# PagerDuty Integration
PAGERDUTY_ENABLED=true
PAGERDUTY_WEBHOOK_SECRET=${PAGERDUTY_WEBHOOK_SECRET}
PAGERDUTY_API_KEY=${PAGERDUTY_API_KEY}
PAGERDUTY_USER_EMAIL=oncall@yourcompany.com

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=4
API_LOG_LEVEL=warn

# Webhook Security Settings
WEBHOOK_RATE_LIMIT=100
WEBHOOK_ALLOWED_IPS=${ALLOWED_IPS_CIDR}

# JWT Authentication
AUTH_SECRET=${JWT_SECRET_KEY}

# Firebase Configuration
FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=/app/config/firebase-production-service-account-key.json

# AWS Configuration
AWS_PROFILE=production
AWS_DEFAULT_REGION=ap-south-1

# Monitoring and Observability (Production)
GRAFANA_MCP_URL=${GRAFANA_URL}
GRAFANA_MCP_API_KEY=${GRAFANA_API_KEY}
DATADOG_MCP_API_KEY=${DATADOG_API_KEY}
DATADOG_MCP_APP_KEY=${DATADOG_APP_KEY}
```

