# DreamOps Production Environment
# Copy this to .env.production and update with your Neon production connection string

# Database (Neon Production)
DATABASE_URL=postgresql://username:password@ep-prod-darkness-123456.us-east-2.aws.neon.tech/oncall_agent?sslmode=require

# Core Configuration
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY_PROD}
CLAUDE_MODEL=claude-3-5-sonnet-20241022
LOG_LEVEL=INFO
ENVIRONMENT=production

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
CORS_ORIGINS=["https://app.yourdomain.com","https://api.yourdomain.com"]

# PagerDuty Integration
PAGERDUTY_ENABLED=true
PAGERDUTY_WEBHOOK_SECRET=${PAGERDUTY_WEBHOOK_SECRET_PROD}
PAGERDUTY_API_KEY=${PAGERDUTY_API_KEY_PROD}
PAGERDUTY_ROUTING_KEY=${PAGERDUTY_ROUTING_KEY_PROD}

# Kubernetes Integration
K8S_ENABLED=true
K8S_CONFIG_PATH=/etc/kubeconfig/config
K8S_CONTEXT=production-cluster
K8S_NAMESPACE=oncall-prod
K8S_ENABLE_DESTRUCTIVE_OPERATIONS=true  # Enable with caution!

# GitHub Integration
GITHUB_TOKEN=${GITHUB_TOKEN_PROD}
GITHUB_MCP_SERVER_PATH=/usr/local/bin/github-mcp-server
GITHUB_MCP_SERVER_HOST=localhost
GITHUB_MCP_SERVER_PORT=8081

# Grafana Integration
GRAFANA_URL=https://grafana.yourdomain.com
GRAFANA_API_KEY=${GRAFANA_API_KEY_PROD}

# Notion Integration
NOTION_TOKEN=${NOTION_TOKEN_PROD}
NOTION_DATABASE_ID=${NOTION_DATABASE_ID_PROD}
NOTION_VERSION=2022-06-28

# MCP Settings
MCP_MAX_RETRIES=5
MCP_TIMEOUT_SECONDS=60